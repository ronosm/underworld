{% extends 'AppBundle::base.html.twig' %}

{% block title %}RIVAS RUIDO APP{% endblock %}

{% block body %}
    <div id="wrapper">
        <h1>RIVAS RUIDO APP - NUEVO GRUPO</h1>
        <div id="container">
            <a href="{{ url('groups_add') }}">Nuevo</a>
            <table>
                <tr>
                    <td>Nombre</td>
                    <td>Num miembros</td>
                    <td>Pagos</td>
                    <td>Faltas</td>
                    <td>Editar</td>
                    <td>Borrar</td>
                </tr>
                {% for group in groups %}
                <tr>
                    <td>{{ group.name }}</td>
                    <td>{{ group.members.count }}</td>
                    <td>-</td>
                    <td>-</td>
                    <td><a href="{{ url('groups_edit', {'id' : group.id}) }}">Editar</a></td>
                    <td><a onclick="return confirm('Â¿Seguro que deseas eliminar el grupo?')" href="{{ url('groups_delete', {'id' : group.id}) }}">Borrar</a></td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
